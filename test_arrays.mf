import io

def fun void main()
    int[] lista = [3, 1, 4, 1, 5]
    
    int mid = len(lista) / 2
    int[] esquerda = []
    int[] direita = []
    
    print("Lista original:")
    print(lista)
    print("Tamanho:")
    print(len(lista))
    print("Metade:")
    print(mid)
    
    int i = 0
    while(i < mid)
        esquerda.add(lista[i])
        i = i + 1
    
    while(i < len(lista))
        direita.add(lista[i])
        i = i + 1
    
    print("Esquerda:")
    print(esquerda)
    print("Direita:")
    print(direita)
end def
