import io

def fun void mergeSort(int[] lista)
    if(len(lista) <= 1)
        return

    int mid = len(lista) / 2
    int[] esquerda = []
    int[] direita = []

    int i = 0
    while(i < mid)
        esquerda.add(lista[i])
        i = i + 1

    while(i < len(lista))
        direita.add(lista[i])
        i = i + 1

    mergeSort(esquerda)
    mergeSort(direita)

    # Apenas mostrar os resultados das divisÃµes
    print("Lista:")
    print(lista)
    print("Esquerda:")
    print(esquerda)
    print("Direita:")
    print(direita)
end def

def fun void main()
    int[] lista = [3, 1, 4, 1, 5]
    mergeSort(lista)
end def
