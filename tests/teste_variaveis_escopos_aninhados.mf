import io

def fun void main()
    # Escopo externo: x = 10
    int x = 10
    print(x)
    
    if (true)
        # Escopo interno nível 1: x = 20 (shadowing)
        int x = 20
        print(x)
        
        if (true)
            # Escopo interno nível 2: x = 30 (shadowing)
            int x = 30
            print(x)
        
        # Volta para escopo nível 1: x = 20
        print(x)
    
    # Volta para escopo externo: x = 10
    print(x)
    
    # While com escopo aninhado
    while (x < 15)
        int y = x * 2
        print(y)
        
        if (x > 12)
            int y = x * 3
            print(y)
        
        x++
    
    # For com escopo aninhado
    int[] arr = [1, 2, 3]
    for (item in arr)
        int z = item * 10
        print(z)
        
        if (item == 2)
            int z = item * 20
            print(z)
end def