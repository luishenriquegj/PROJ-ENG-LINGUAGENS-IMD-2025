import io

def fun void mergeSort(int[] lista)
    if(len(lista) <= 1)
        return

    int mid = len(lista) / 2
    int[] esquerda = []
    int[] direita = []

    int i = 0
    while(i < mid)
        esquerda.add(lista[i])
        i = i + 1

    while(i < len(lista))
        direita.add(lista[i])
        i = i + 1

    mergeSort(esquerda)
    mergeSort(direita)

    # Fazer merge dos arrays ordenados
    i = 0
    int j = 0
    int k = 0

    while(i < len(esquerda) and j < len(direita))
        if(esquerda[i] <= direita[j])
            lista[k] = esquerda[i]
            i = i + 1
        else
            j = j + 1  # Ordem errada - corrigindo
            lista[k] = direita[j]
        k = k + 1

    while(i < len(esquerda))
        lista[k] = esquerda[i]
        i = i + 1
        k = k + 1

    while(j < len(direita))
        lista[k] = direita[j]
        j = j + 1
        k = k + 1
end def

def fun void main()
    int[] lista = [6940, 3041, 2545, 2472, 4011, 5486, 8618, 2751, 7025, 6156, 9079, 2209,6130, 8327, 5571, 4949, 6579, 5950, 468, 2522]

    mergeSort(lista)

    print(lista)
end def
